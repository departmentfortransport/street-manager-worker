{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "rootDir": "./src", // needed to preserve dir structure
    "outDir": "dist",
    "experimentalDecorators": true,
    "allowJs": false,
    "sourceMap": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
